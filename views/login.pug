extends shared/_master

block body
    .container
        .row.mt-5
            .col-md-6.m-auto
                .card.card-body
                    h1.text-center.mb-3
                        i.fas.fa-sign-in-alt
                        | Login
                    form(action="/login" method="POST")
                        .form-group
                            label(for="username") Username
                            input#username.form-control(type="text" name="username" placeholder="Please, enter your username!")
                        .form-group
                            label(for="password") Password
                            input#password.form-control(type="password" name="password" placeholder="Please, enter your password!")
                        button.btn.btn-primary.btn-block(type="submit") Login
                    p.lead.mt-4
                        | You don't have an account? 
                        a(href="/register") Register
