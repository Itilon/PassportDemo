extends shared/_master

block body
    .container
        .row.mt-5
            .col-md-6.m-auto
                .card.card-body
                    h1.text-center.mb3
                        i.fas.fa-user-plus
                        | Register
                    form(action="/register" method="POST")
                        .form-group
                            label(for="username")
                            input#username.form-control(type="text" name="username" placeholder="Please, select a username!")
                        .form-group
                            label(for="name")
                            input#name.form-control(type="text" name="name" placeholder="Please, enter your name!")
                        .form-group
                            label(for="email")
                            input#email.form-control(type="email" name="email" placeholder="Please, enter your email!")
                        .form-group
                            label(for="password")
                            input#password.form-control(type="password" name="password" placeholder="Please, enter a password!")
                        .form-group
                            label(for="confirmed")
                            input#confirmed.form-control(type="password" name="confirmed" placeholder="Please, confirm your password!")
                        button.btn.btn-primary.btn-block(type="submit") Register
                    p.lead.mt-4
                        | Already have an account? 
                        a(href="/login") Login