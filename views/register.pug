extends shared/_master

block body
    .container
        .row.mt-5
            .col-md-6.m-auto
                .card.card-body.register-card
                    h1.text-center.mb3
                        i.fas.fa-user-plus
                        | Register
                    if errors
                        each error in errors
                            .alert.alert-warning.alert-dismissible.custom-alert.fade.show(role="alert")
                                p=error.msg
                                button.close(type="button" data-dismiss="alert" aria-label="Close")
                                    span(aria-hidden="true") &times;
                    form(action="/register" method="POST")
                        .form-group
                            label(for="username") Username
                            if username
                                input#username.form-control(type="text" name="username" placeholder="Please, select a username!" value=username)
                            else
                                input#username.form-control(type="text" name="username" placeholder="Please, select a username!")
                        .form-group
                            label(for="name") Name
                            if name
                                input#name.form-control(type="text" name="name" placeholder="Please, enter your name!" value=name)
                            else
                                input#name.form-control(type="text" name="name" placeholder="Please, enter your name!")
                        .form-group
                            label(for="email") Email
                            if email
                                input#email.form-control(type="email" name="email" placeholder="Please, enter your email!" value=email)
                            else
                                input#email.form-control(type="email" name="email" placeholder="Please, enter your email!")
                        .form-group
                            label(for="password") Password
                            if password
                                input#password.form-control(type="password" name="password" placeholder="Please, enter a password!" value=password)
                            else
                                input#password.form-control(type="password" name="password" placeholder="Please, enter a password!")
                        .form-group
                            label(for="confirmed") Password Confirmed
                            if confirmed
                                input#confirmed.form-control(type="password" name="confirmed" placeholder="Please, confirm your password!" value=confirmed)
                            else
                                input#confirmed.form-control(type="password" name="confirmed" placeholder="Please, confirm your password!")
                        button.btn.btn-primary.btn-block(type="submit") Register
                    p.lead.mt-4
                        | Already have an account? 
                        a(href="/login") Login